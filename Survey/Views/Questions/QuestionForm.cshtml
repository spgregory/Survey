@model Survey.ViewModel.SurveyVM
@{
    ViewBag.Title = "QuestionForm";
}

<h2>QuestionForm</h2>

@using (Html.BeginForm("Save", "Question"))
{

    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">

        @Html.LabelFor(m=> m.Question.Id)

        @Html.TextBoxFor(m=>m.Question.QuestionText)

        @Html.ValidationMessageFor(m => m.Question.QuestionText)

    </div>
    <div class="form-group">
        @Html.HiddenFor(m=>m.Option.Id)
        @Html.LabelFor(m=>m.Option.OptionOne)
        @Html.TextBoxFor(m=>m.Option.OptionOne)
        @Html.HiddenFor(m=>m.Option.OptionOneValue)
        @Html.LabelFor(m=>m.Option.OptionTwo)
        @Html.TextBoxFor(m=>m.Option.OptionTwo)
        @Html.HiddenFor(m=>m.Option.OptionTwoValue)
        @Html.LabelFor(m=>m.Option.OptionThree)
        @Html.TextBoxFor(m=>m.Option.OptionThree)
        @Html.HiddenFor(m=>m.Option.OptionThreeValue)
        @Html.LabelFor(m=>m.Option.OptionFour)
        @Html.TextBoxFor(m=>m.Option.OptionFour)
        @Html.HiddenFor(m=>m.Option.OptionFourValue)
    </div>
    @Html.HiddenFor(m=>m.Question.Id)
    @Html.HiddenFor(m=>m.Question.Option_Name)

    <button type="submit">Save</button>
}